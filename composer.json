{
    "name": "matthiastraka/php-invest",
    "type": "project",
    "description": "PHP Stock market portfolio manager",
    "keywords": ["php", "portfolio", "stock"],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Matthias Straka"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4.0",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "beberlei/doctrineextensions": "^1.3",
        "doctrine/doctrine-bundle": "^3.1",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "league/commonmark": "^2.6",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "^8.0",
        "symfony/console": "^8.0",
        "symfony/dotenv": "^8.0",
        "symfony/flex": "^2.2",
        "symfony/form": "^8.0",
        "symfony/framework-bundle": "^8.0",
        "symfony/http-client": "^8.0",
        "symfony/mime": "^8.0",
        "symfony/runtime": "^8.0",
        "symfony/security-bundle": "^8.0",
        "symfony/twig-bundle": "^8.0",
        "symfony/validator": "^8.0",
        "symfony/yaml": "^8.0",
        "twig/extra-bundle": "^3.6",
        "twig/intl-extra": "^3.6",
        "twig/markdown-extra": "^3.6",
        "twig/string-extra": "^3.6"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^4.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpunit/phpunit": "^10",
        "symfony/browser-kit": "^8.0",
        "symfony/css-selector": "^8.0",
        "symfony/maker-bundle": "^1.65",
        "symfony/phpunit-bridge": "^8.0",
        "symfony/stopwatch": "^8.0",
        "symfony/web-profiler-bundle": "^8.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "npm install --omit=dev"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^8.0"
        }
    }
}
